# Local Development Environment Configuration
NODE_ENV=development
PORT=3000

# AWS Configuration (Local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Database Configuration (Local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finefinds
MONGODB_URI=mongodb://localhost:27017/finefinds

# API Configuration
API_URL=http://localhost:3000
API_VERSION=v1

# Authentication (Local)
JWT_SECRET=local_development_secret
COGNITO_USER_POOL_ID=local
COGNITO_CLIENT_ID=local

# Storage (Local)
S3_BUCKET=finefinds-local
S3_REGION=us-east-1

# Logging
LOG_LEVEL=debug
SENTRY_DSN=

# Feature Flags
ENABLE_FEATURE_X=true
ENABLE_FEATURE_Y=true

# Monitoring
ENABLE_METRICS=false
METRICS_INTERVAL=60 