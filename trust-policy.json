{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::891076991993:oidc-provider/token.actions.githubusercontent.com"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringLike": {
                    "token.actions.githubusercontent.com:sub": [
                        "repo:amalgamage/finefinds-services:environment:dev",
                        "repo:amalgamage/finefinds-services:environment:qa",
                        "repo:amalgamage/finefinds-services:environment:staging",
                        "repo:amalgamage/finefinds-services:environment:prod",
                        "repo:amalgamage/finefinds-services:ref:refs/heads/dev",
                        "repo:amalgamage/finefinds-services:ref:refs/heads/qa",
                        "repo:amalgamage/finefinds-services:ref:refs/heads/staging",
                        "repo:amalgamage/finefinds-services:ref:refs/heads/main"
                    ]
                },
                "StringEquals": {
                    "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
                }
            }
        }
    ]
} 